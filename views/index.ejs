<!DOCTYPE html>
<html>
  
  <head>
    <!-- <link href="stylesheets/style.css" rel="stylesheet" /> -->
    <link
      href="https://unpkg.com/carbon-components/css/carbon-components.min.css"
      rel="stylesheet"
    />
    <script
      src="https://code.jquery.com/jquery-3.4.1.js"
      integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
      crossorigin="anonymous"
    ></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <link href="stylesheets/style.css" rel="stylesheet"/>
  </head>

  <body>
    <div id='instructions_div' class="text">
      <h3>Instructions</h3>
        <p>Fill the following fields to estimate your dream house's price </p>
    </div>   
    <div class="bx--grid"></div>
      <div class="bx--row">
        <div class="bx--col">
  
          <div class="container">
            

            <div class="bx--form-item bx--text-input-wrapper">
              <label for="text-input-3" class="bx--label">ZIP Code</label>
              <div class="bx--text-input__field-wrapper">
                <input
                  onchange='onChange(event)'
                  id="zipcode"
                  type="text"
                  class="bx--text-input"
                  placeholder="Null"
                />
              </div>
            </div>

            <div class="bx--form-item bx--text-input-wrapper">
              <label for="text-input-3" class="bx--label">Bedrooms</label>
              <div class="bx--text-input__field-wrapper">
                <input
                  onchange='onChange(event)'
                  id="bedrooms"
                  type="text"
                  class="bx--text-input"
                  placeholder="Null"
                />
              </div>
            </div>

            <div class="bx--form-item bx--text-input-wrapper">
              <label for="text-input-3" class="bx--label">Bathrooms</label>
              <div class="bx--text-input__field-wrapper">
                <input
                  onchange='onChange(event)'
                  id="bathrooms"
                  type="text"
                  class="bx--text-input"
                  placeholder="Null"
                />
              </div>
            </div>

            <div class="bx--form-item bx--text-input-wrapper">
              <label for="text-input-3" class="bx--label">Living Square Footage</label>
              <div class="bx--text-input__field-wrapper">
                <input
                  onchange='onChange(event)'
                  id="sqft_living"
                  type="text"
                  class="bx--text-input"
                  placeholder="Null"
                />
              </div>
            </div>

            <div class="bx--form-item bx--text-input-wrapper">
              <label for="text-input-3" class="bx--label">Neightbour's Square Footage</label>
              <div class="bx--text-input__field-wrapper">
                <input
                  onchange='onChange(event)'
                  id="sqft_living15"
                  type="text"
                  class="bx--text-input"
                  placeholder="Null"
                />
              </div>
            </div>

            <div class="bx--form-item bx--text-input-wrapper">
              <label for="text-input-3" class="bx--label">Latitud</label>
              <div class="bx--text-input__field-wrapper">
                <input
                  onchange='onChange(event)'
                  id="lat"
                  type="text"
                  class="bx--text-input"
                  placeholder="Null"
                />
              </div>
            </div>

            <div class="bx--form-item bx--text-input-wrapper">
              <label for="text-input-3" class="bx--label">Longitud</label>
              <div class="bx--text-input__field-wrapper">
                <input
                  onchange='onChange(event)'
                  id="long"
                  type="text"
                  class="bx--text-input"
                  placeholder="Null"
                />
              </div>
            </div>

            <div class=" bx--form-item bx--text-input-wrapper">
              <label for="text-input-3" class="bx--label">Waterfront</label>
              <div class="bx--form-item">
                <input class="bx--toggle" id="waterfront" type="checkbox" onclick='onToggle(event)'>
                <label class="bx--toggle__label" for="waterfront">
                  <span class="bx--toggle__text--left">Off</span>
                  <span class="bx--toggle__appearance"></span>
                  <span class="bx--toggle__text--right">On</span>
                </label>
              </div>
            </div>
          </div>
        </div> 
        <div class="bx--col">
          <button id="btn-form" class="bx--btn bx--btn--primary" type="button" onclick="onEstimate()">
            Estimate Price ($USD)
          </button>

          <div class="bx--form-item">
            <input id="price-output" type="text" class="bx--text-input" placeholder="0.00" readonly>
          </div>
        </div>
      </div>
    </div>    

    <!-- Put HTML snippets of components here... -->
    <script src="https://unpkg.com/carbon-components/scripts/carbon-components.min.js"></script>
    <script type="text/javascript" src="javascripts/javascript.js"></script>
    <script>
      var socket = io.connect();
      socket.on("processresult", processresultHandler);
      function sendPayloadToDeployment(payload) {
        /*  document.getElementById("results_spinner").style.display = "block"; */
         /* var deployment_type = document.querySelector(
          'input[name="deployment_type"]:checked'
        ).value;  */
        socket.emit("sendtomodel", payload);
      }
    </script>
  </body>
</html>

